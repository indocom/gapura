<br> <br> <br> <br> <br>
<center> <%= link_to "Add Past Event", new_admin_event_path %> </center>

<table style="border:2px solid black; width: 100%; background-color: white">
  <thead>
    <tr>
      <th> Title </th>
      <th> Year </th>
      <th> ID </th>
      <th> Logo </th>
      <th> Show </th>
      <th> Edit </th>
      <th> Destroy </th>
    </tr>
  </thead>

  <% @events.each do |event| %>
    <tr style="border: 2px solid black">
      <td> <%= event.title %> </td>
      <td> <%= event.year %> </td>
      <td> <%= event.id %> </td>
      <td> <%= event.logo.attached? ? image_tag(event.logo, height: '100px') : 'NONE' %> </td>
      <td> <%= link_to "Show", admin_event_path(event) %> </td>
      <td> <%= link_to "Edit", edit_admin_event_path(event) %> </td>
      <td> <%= link_to "Delete", admin_event_path(event), method: :delete,
        data: {confirm: "Do you want to delete this event?"} %> </td>
    </tr>
  <% end %>
</table>
