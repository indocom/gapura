<section id="admin-form" class="section-container">
  <div class="row">
    <div class="title">
      Edit Sponsor for NUANSA <%= @event.year %>
    </div>
    <div class="content">
      <%= render 'form', sponsor: @sponsor, target_url: admin_event_sponsor_path %>

      <br><br>
      
      <div class="row">
        <div class="col-lg-12"></div>
        <div class="col-lg-3">
          <%= button_to("Event Menu", admin_events_path, method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3">
          <%= button_to("Show Event", admin_event_path(@event.year), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3">
          <%= button_to('Sponsors', admin_event_sponsors_path(@event.year), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3">
          <%= button_to('Preview', admin_event_sponsor_path(@event.year, @sponsor), method: "get", class: "btn btn-info") %>
        </div>
      </div>
    </div>
  </div>
</section>
