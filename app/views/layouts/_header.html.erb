<header id="header">
  <div class="container">
    <div id="logo" class="pull-left">
      <%= image_tag("logo.png", height: '200') %>
    </div>

    <nav id="nav-menu-container">
      <ul class="nav-menu">
        <% 
          str = ""

          menus = {
            "intro" => "Home",
            "about-us" => "About Us",
            "events" => "Past NUANSA",
          }

          menus.each do |key, value|
            is_selected = false

            if current_controller_name == "welcome"
              if key == "intro"
                is_selected = true
              end
            elsif current_controller_name == key
              is_selected = true
            end

            if is_selected 
              str += "<li class='menu-active'>"
            else 
              str += "<li>"
            end

            case key
            when "intro"
              if current_controller_name == "welcome"
                str += (link_to "Home", root_path(anchor: "intro"))
              else
                str += (link_to "Home", root_path)
              end
            when "about-us"
              str += (link_to "About Us", root_path(anchor: "about"))
            when "events"
              str += (link_to "Past NUANSA", events_path)
            end

            str += "</li>"
          end
        %>

        <%= str.html_safe %>
        <%= render 'layouts/login_button' %>
      </ul>
    </nav>
  </div>
</header>