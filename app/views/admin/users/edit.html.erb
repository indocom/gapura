<% provide(:custom_css, 'admin/users/edit') %>

<section id="admin-users-edit" class="section-container">
  <div class="row">
    <div class="title">
      Edit 
    </div>
    <div class="content">
      <div class="col-lg-12">
        <div class="row user-profile">
          <div class="col-lg-12"></div>
          <div class="col-lg-3 col-md-3 col-xs-12"><%= @user.username %></div>
          <div class="col-lg-3 col-md-3 col-xs-12"><%= @user.email %></div>
          <div class="col-lg-3 col-md-3 col-xs-6">
            <% if @user.has_role? :admin %>
              admin
            <% else %>
              -
            <% end %>
          </div>
          <div class="col-lg-3 col-md-3 col-xs-6">
            <% if @user.has_role? :superuser %>
              superuser
            <% else %>
              -
            <% end %>
          </div>
        </div>

        <br><br>

        <div class="row">
          <div class="col-lg-12">
            <%= render 'form', user: @user %>
          </div>
        </div>
        
        <br><br>

        <div class="row">
          <div class="col-lg-12"></div>
          <div class="col-lg-6 col-md-6 col-xs-6">
            <%= button_to "Edit", admin_user_path(@user), method: "get", class: "btn btn-info" %>
          </div>
          <div class="col-lg-6 col-md-6 col-xs-6">
            <%= button_to "Back", admin_users_path, method: "get", class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
