<% provide(:custom_css, 'admin/events/form') %>

<section id="admin-form" class="section-container">
  <div class="row">
    <div class="title">
      Edit Event
    </div>
    <div class="content">
      <%= render 'form', event: @event, target_url: admin_event_path(@event.year) %>
      
      <br><br>
      
      <div class="row">
        <div class="col-lg-3">
          <%= link_to "Show", admin_event_path(@event.year) %>
        </div>
        <div class="col-lg-3">
          <%= link_to "Back", admin_events_path %>
        </div>
        <div class="col-lg-3">
          <%= link_to 'Gallery', admin_event_gallery_photos_path(@event.year) %>
        </div>
        <div class="col-lg-3">
          <%= link_to 'Sponsors', admin_event_sponsors_path(@event.year) %>
        </div>
      </div>
    </div>
  </div>
</section>
