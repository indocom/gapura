<section id="admin-tickets-index" class="section-container">
  <div class="row">
    <div class="title">
      Ticket List
    </div>
    <div class="content">
      <div class="col-lg-12">
        <% @tickets.each do |ticket| %>
          <div class="row info-fields">
            <div class="col-lg-2 col-md-12 col-xs-12 info-item">
              <%= ticket.customer ? ticket.customer.email : 'Customer has been deleted' %>
            </div>
            <div class="col-lg-2 col-md-12 col-xs-12 info-item">
              <%= ticket.claimed? ? "Claimed at: #{ticket.claimed_at.getlocal}" : 'Not yet claimed' %>
            </div>
            <div class="col-lg-2 col-md-12 col-xs-12 info-item">
              <%= ticket.note.empty? ? '-' : ticket.note %>
            </div>

            <div class="col-lg-1 col-md-12 col-xs-12 info-item">
              <%= button_to("Show", admin_ticket_path(ticket), method: :get, class: "btn btn-info") %>
            </div>

            <div class="col-lg-3 col-md-12 col-xs-12 info-item">
              <%= button_to("Send Email Confirmation", admin_ticket_email_confirmation_path(ticket), method: :post, class: "btn btn-info",
                data: { confirm: 'Do you want to send this ticket confirmation email?' }) %>
              <br> Last:
              <% if ticket.customer && ticket.customer.last_confirmation_email %>
                <%= ticket.customer.last_confirmation_email.getlocal %>
              <% else %>
                Not yet sent
              <% end %>
            </div>

            <% if current_user.has_role? :superuser %>
              <div class="col-lg-1 col-md-12 col-xs-12 info-item">
                <%= button_to("Claim Page", admin_claim_ticket_path, params: { claim_token: ticket.customer ?
                  ticket.customer.claim_token : '' }, class: "btn btn-info", method: :get) %>
              </div>

              <div class="col-lg-1 col-md-12 col-xs-12 info-item">
                <%= button_to "Delete", admin_ticket_path(ticket), method: :delete, data:
                  { confirm: 'Do you want to delete this ticket?' }, class: "btn btn-info" %>
              </div>
            <% end %>
          </div>
        <% end %>

        <br><br>

        <div class="row">
          <div class="col-lg-6">
            <%= button_to("Back", admin_root_path, method: "get", class: "btn btn-info") %>
          </div>
          <div class="col-lg-6">
            <%= button_to("Buy Ticket (Mock Ticket)", admin_tickets_path, method: "post", class: "btn btn-info") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
