<% provide(:custom_css, 'admin/events/index') %>

<section id="admin-events-index" class="section-container">
  <div class="row">
    <div class="title">
      Event List
    </div>
    <div class="content">
      <div class="col-lg-12">
        <% @events.each do |event| %>
          <div class="row event-list">
            <div class="col-lg-3 col-md-12 col-xs-12 col-item"><%= event.year %></div>
            <div class="col-lg-3 col-md-12 col-xs-12 col-item"><%= event.title %></div>
            <div class="col-lg-3 col-md-12 col-xs-12 col-item"><%= event.subtitle %></div>
            <div class="col-lg-1 col-md-4 col-xs-4 col-item"><%= link_to "Show", admin_event_path(event.year) %></div>
            <div class="col-lg-1 col-md-4 col-xs-4 col-item"><%= link_to "Edit", edit_admin_event_path(event.year) %></div>
            <div class="col-lg-1 col-md-4 col-xs-4 col-item">
              <%= link_to "Delete", admin_event_path(event.year), method: :delete,
                    data: {confirm: "Do you want to delete this event?"} %>
            </div>
          </div>
        <% end %>

        <br><br>

        <div class="row">
          <div class="col-lg-6">
            <%= link_to "Back", admin_root_path %>
          </div>
          <div class="col-lg-6">
            <%= link_to "Add Past Event", new_admin_event_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
