<section id="admin" class="section-container">
  <div class="row">
    <div class="title">
      Email Blaster
    </div>
    <div class="content">
      <div class="row">
        <div class="col-lg-12"></div>
        <div class="col-lg-6">
          <% if can?(:email, Subscriber) %>
            <%= button_to("Send New Email", admin_write_email_path, method: "get", class: "btn btn-info") %>
          <% end %>
        </div>
        <div class="col-lg-6">
          <% if can?(:email, Subscriber) %>
            <%= button_to("Sync with Customer", admin_sync_with_customer_path, method: "get", class: "btn btn-info") %>
          <% end %>
        </div>
      </div>
      <br><br>
      <% @subscribers.each do |subscriber| %>
        <div class="row info-fields">
          <div class="col-lg-12"></div>
          <div class="col-lg-6 col-md-6 col-xs-8 info-item"><%= subscriber.customer.email %></div>

          <% if subscriber.unsubscribed %>
            <div class="col-lg-6 col-md-6 col-xs-4 info-item">
              UNSUBSCRIBED
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
