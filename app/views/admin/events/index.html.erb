<% provide(:custom_css, 'admin/events/index') %>

<section id="admin-events-index" class="section-container">
  <div class="row">
    <div class="title">
      Event List
    </div>
    <div class="content">
      <% @events.each do |event| %>
        <div class="row info-fields">
          <div class="col-lg-12"></div>
          <div class="col-lg-1 col-md-12 col-xs-12 info-item"><%= event.year %></div>
          <div class="col-lg-2 col-md-12 col-xs-12 info-item"><%= event.title %></div>
          <div class="col-lg-3 col-md-12 col-xs-12 info-item"><%= event.subtitle %></div>

          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Show", admin_event_path(event.year), method: "get", class: "btn btn-info") %>
          </div>

          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Edit", edit_admin_event_path(event.year), method: "get", class: "btn btn-info") %>
          </div>
          
          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Previews", admin_event_event_previews_path(event.year), method: "get", class: "btn btn-info") %>
          </div>
          
          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Sponsors", admin_event_sponsors_path(event.year), method: "get", class: "btn btn-info") %>
          </div>

          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Gallery", admin_event_gallery_photos_path(event.year), method: "get", class: "btn btn-info") %>
          </div>

          <div class="col-lg-1 col-md-4 col-xs-4 info-item">
            <%= button_to("Delete", admin_event_path(event.year), method: :delete, class: "btn btn-info",
                  data: {confirm: "Do you want to delete this event?"}) %>
          </div>
        </div>
      <% end %>

      <br><br>

      <div class="row">
        <div class="col-lg-12"></div>
        <div class="col-lg-6">
          <%= button_to("Back", admin_root_path, method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-6">
          <%= button_to("Add Past Event", new_admin_event_path, method: "get", class: "btn btn-info") %>
        </div>
      </div>
    </div>
  </div>
</section>
