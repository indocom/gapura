<section id="partners" class="section-container">
  <div class="row">
    <div class="col-lg-12 col-md-12 sponsors">
      <div class="title">
        Sponsors
      </div>
      <div class="content">
        <div class="clearfix wow fadeInUp">
          <% @event.sponsors.each do |sponsor| %>
            <div class="col-lg-3 col-md-4 col-xs-6">
              <div class="image-box-2-1 partner-box">
                <div class="image-content partner-logo">
                  <% if sponsor.link.present? %>
                    <%= link_to(image_tag(serve_image_path(sponsor.logo)), sponsor.link, target: '_blank') %>
                  <% else %>
                    <%= image_tag(serve_image_path(sponsor.logo)) %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
