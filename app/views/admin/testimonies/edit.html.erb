<section id="admin-form" class="section-container">
  <div class="row">
    <div class="title">
      Edit Testimony
    </div>
    <div class="content">
      <%= render 'form', testimony: @testimony, target_url: admin_testimony_path %>

      <br><br>
      
      <div class="row">
        <div class="col-lg-12"></div>
        <div class="col-lg-6">
          <%= button_to('Show', admin_testimony_path(@testimony), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-6">
          <%= button_to('Testimonies', admin_testimonies_path, method: "get", class: "btn btn-info") %>
        </div>
      </div>
    </div>
  </div>
</section>
