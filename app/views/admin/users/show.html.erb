<% provide(:custom_css, 'admin/users/show') %>

<section id="admin-users-show" class="section-container">
  <div class="row">
    <div class="title">
      User Profile
    </div>
    <div class="content">
      <div class="col-lg-12">
        <div class="row user-profile">
          <div class="col-lg-3 col-md-3 col-xs-12"><%= @user.username %></div>
          <div class="col-lg-3 col-md-3 col-xs-12"><%= @user.email %></div>
          <div class="col-lg-3 col-md-3 col-xs-6">
            <% if @user.has_role? :admin %>
              admin
            <% else %>
              -
            <% end %>
          </div>
          <div class="col-lg-3 col-md-3 col-xs-6">
            <% if @user.has_role? :superuser %>
              superuser
            <% else %>
              -
            <% end %>
          </div>
        </div>

        <br><br>

        <div class="row" style="text-align: center;">
          <div class="col-lg-6 col-md-6 col-xs-6">
            <%= link_to "Edit", edit_admin_user_path(@user) %>
          </div>
          <div class="col-lg-6 col-md-6 col-xs-6">
            <%= link_to "Back", admin_users_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
