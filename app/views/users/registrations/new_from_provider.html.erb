<section id="user-form" class="section-container">
  <div class="row">
    <div class="title">
      Sign Up
    </div>
    <div class="content">
      <h3> Please complete remaining details! </h3>

      <%= form_for(@user, as: 'user', url: registration_path('user')) do |form| %>
        <%= render "devise/shared/error_messages", resource: @user %>
        
        <div class="form-fields">
          <div class="row">
            <div class="col-lg-2 col-md-12 field-key">
              <%= form.label :username %>
            </div>
            <div class="col-lg-10 col-md-12 field-value">
              <%= form.text_field :username, autofocus: true %>
            </div>
          </div>

          <%= hidden_field_tag   'from_provider', true %>

          <div class="row">
            <div class="col-lg-12">
              <%= form.submit 'Sign Up', class: "submit-button" %>      
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="row">
        <div class="col-lg-12 col-btn">
          <div class="btn btn-secondary">
            <%= link_to "Cancel", cancel_user_registration_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
