<% provide(:custom_css, 'admin/events/form') %>

<section class="section-container">
  <div class="row">
    <div class="title">
      Edit Event
    </div>
    <div class="content">
      <div id="admin-form">
        <%= render 'form', event: @event, target_url: admin_event_path(@event.year) %>
      </div>
      
      <br><br>
      
      <div class="row">
        <div class="col-lg-12"></div>
        <div class="col-lg-3 col-md-4 col-xs-4">
          <%= button_to('Sponsors', admin_event_sponsors_path(@event.year), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3 col-md-4 col-xs-4">
          <%= button_to('Gallery', admin_event_gallery_photos_path(@event.year), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3 col-md-4 col-xs-4">
          <%= button_to("Previews", admin_event_event_previews_path(@event.year), method: "get", class: "btn btn-info") %>
        </div>
        <div class="col-lg-3 col-md-12 col-xs-12">
          <%= button_to("Back", admin_events_path, method: "get", class: "btn btn-info") %>
        </div>
      </div>
    </div>
  </div>
</section>
