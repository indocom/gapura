<%= form.fields_for field do |image_form| %>
  <div class="row">
    <div class="col-lg-12"></div>
    <div class="col-lg-2 col-md-12 field-key">
      <%= image_form.label :file, field.to_s.capitalize %>
    </div>
    <div class="col-lg-10 col-md-12 field-value">
      <%= image_form.file_field :file, accept: 'image/png,image/gif,image/jpeg'%>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12"></div>
    <div class="col-lg-2 col-md-12 field-key">
      <%= image_form.label :_destroy, "Delete #{field.to_s.capitalize}" %>
    </div>
    <div class="col-lg-10 col-md-12 field-value">
      <%= image_form.check_box :_destroy %>
    </div>
  </div>
<% end %>
