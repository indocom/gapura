<section id="admin-users-home" class="section-container">
  <div>
    
  </div>  
</section>
<h1>Users</h1>

<table style="border:2px solid black; width: 100%; background-color: white">
  <thead>
    <tr>
      <th> Username </th>
      <th> Email </th>
      <th> Admin </th>
      <th> Superuser </th>
      <th> Show </th>
      <th> Change Role </th>
      <th> Destroy </th>
    </tr>
  </thead>

  <tbody> 
    <% @users.each do |user| %>
      <tr style="border:2px solid black">
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.has_role? :admin %></td>
        <td><%= user.has_role? :superuser %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Change Role', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>