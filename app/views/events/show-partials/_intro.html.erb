  
<section id="intro" class="section-container">
  <div class="intro-container">  
    <div id="introCarousel" class="carousel slide carousel-fade" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <% imgs = []%>
        <% txts = []%>
        <% @event_previews.each do |event_preview| %>  
          <% imgs.push(event_preview.image_link) %>
          <% txts.push(event_preview.preview_info) %>
        <% end %>
          <% if imgs.length == 0 %>
            <% imgs.push(serve_image_path(@event.logo)) %>
            <% txts.push(@event.overview) %>
          <% end %>
          <% imgs.each_with_index do |img, index| %>
          <div class="<%= index == 0 ? 'item active' : 'item' %>">
            <div class='carousel-background'>
              <%= image_tag(img) %>
            </div>
            <div class="carousel-container">
              <div class="carousel-content">
                <h2 class="animated fadeInDown">
                  NUANSA <%= @event.year %> <br>
                  <%= @event.title %> <br>
                  <%= @event.subtitle %> <br>   
                </h2>
                <p class="animated fadeInUp"><%=txts[index]%></p>
                <%= link_to "Trailer", @event.event_info.video_link, class: "venobox btn-get-started animated fadeInUp", 
                      data: {vbtype: "video", autoplay: "true"} %>
              </div>
            </div>
          </div>
        <% end %>
      </div>  

      <a class="carousel-control-prev" href="#introCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon fa fa-angle-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="carousel-control-next" href="#introCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon fa fa-angle-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</section>