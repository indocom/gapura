<section id="gallery" class="section-container">
  <div class="row">
    <div class="title">
      Our Gallery
    </div>
    <div class="content">
      <div class="clearfix wow fadeInUp">
        <% @event.gallery_photos.each do |photo| %>
          <div class="col-lg-3 col-md-6 col-xs-12">
            <div class="image-box-4-3 photo-box">
              <div class="image-content photo">
                <%= link_to image_tag(photo.image_link, class: "img-fluid"), photo.image_link, 
                    class: "venobox", data: { gall: "photo-gallery" } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
