<%= form_with(model: gallery_photo, local: true, url: admin_event_gallery_photos_path) do |form| %>
  <% if gallery_photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gallery_photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% gallery_photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="event-fields">
    <div class="row">
      <div class="col-lg-2 col-md-12 field-key">
        <%= form.label :image, "Attach an Image" %>
      </div>
      <div class="col-lg-10 col-md-12 field-value">
        <%= form.file_field :logo, accept: 'image/png,image/gif,image/jpeg', class: "upload-button" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-md-12 field-key">
        <%= form.label :image_link, "Image Link" %> <br>
      </div>
      <div class="col-lg-10 col-md-12 field-value">
        <%= form.text_field :image_link %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form.submit 'Submit', class: "submit-button" %>      
      </div>
    </div>
  </div>
<% end %>
