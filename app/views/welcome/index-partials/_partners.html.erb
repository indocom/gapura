<section id="partners">
  <div class="container">
    <div class="section-header">
      <h2>Partners</h2>
    </div>

    <div class="row clearfix wow fadeInUp">
      <% @partners.each do |partner| %>
        <div class="col-lg-3 col-md-4 col-xs-6">
          <div class="image-box-2-1 partner-box">
            <div class="image-content partner-logo">
            <% if partner.link.present? %>
              <%= link_to(image_tag(serve_image_path(partner.logo)), partner.link, target: '_blank') %>
            <% else %>
              <%= image_tag(serve_image_path(partner.logo)) %>
            <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
