<section id='gallery' class = 'section-container'>
  <div class = 'section-header'>
    <h2> Galleries </h2>
  </div>
  <div class='row'>
    <div class = 'content'>
      <div class='customized-container clearfix wow fadeInUp'>
        <%= render @gallery_photos %>
      </div>
    </div>
  </div>
  <% if @more_photos %>
    <div class="load-more-container">
      <%= image_tag "ajax-loader.gif", style: "display:none;", class: "loading-gif" %>
      <%= link_to image_tag('red-arrow.png',  class: "load-more-arrow"), "#", class: "load-more", data: { source:
        event_load_photos_url(2019, format: :js), take: 8 } %>
    </div>
  <% end %>
</section>
