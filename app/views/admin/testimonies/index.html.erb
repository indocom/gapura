<% provide(:custom_css, 'admin/testimony/index') %>

<section id="admin-testimony-index" class="section-container">
  <div class="row">
    <div class="title">
      Testimony List
    </div>
    <div class="content">
      <div class="col-lg-12">
        <% @testimonies.each do |testimony| %>
          <div class="row info-fields">
            <div class="col-lg-4 col-md-12 col-xs-12 info-item"><%= testimony.name %></div>
            <div class="col-lg-5 col-md-12 col-xs-12 info-item"><%= testimony.profession %></div>

            <div class="col-lg-1 col-md-4 col-xs-4 info-item"><%= link_to 'Show', admin_testimony_path(testimony) %></div>
            <div class="col-lg-1 col-md-4 col-xs-4 info-item"><%= link_to 'Edit', edit_admin_testimony_path(testimony) %></div>
            <div class="col-lg-1 col-md-4 col-xs-4 info-item">
              <%= link_to 'Delete', admin_testimony_path(testimony), method: :delete,
                  data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        <% end %>

        <br><br>

        <div class="row">
          <div class="col-lg-6">
            <%= link_to "Back", admin_root_path %>
          </div>
          <div class="col-lg-6">
            <%= link_to 'New Testimony', new_admin_testimony_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
