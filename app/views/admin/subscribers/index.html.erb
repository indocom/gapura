<section id="admin" class="section-container">
  <div class="row">
    <div class="title">
      Email Blaster
    </div>
    <% if can?(:email, Subscriber) %>
      <%= button_to("Send New Email", admin_write_email_path, method: "get", class: "btn btn-info") %>
    <% end %>
    <div class="content">
      <br><br>
      <% @subscribers.each do |subscriber| %>
        <div class="row info-fields">
          <div class="col-lg-4 col-md-12 col-xs-12 info-item"><%= subscriber.customer.email %></div>

          <% if subscriber.receive_marketing_email %>
            <div class="col-lg-4 col-md-4 col-xs-4 info-item">
              Marketing Email Subscriber
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
