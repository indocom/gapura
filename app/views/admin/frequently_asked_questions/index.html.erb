<% provide(:custom_css, 'admin/faq/index') %>

<section id="admin-faq-index" class="section-container">
  <div class="row">
    <div class="title">
      FAQ List
    </div>
    <div class="content">
      <div class="col-lg-12">
        <% @faqs.each do |faq| %>
          <div class="row info-fields">
            <div class="col-lg-12"></div>
            <div class="col-lg-3 col-md-12 col-xs-12 field-key"><%= faq.question %></div>
            <div class="col-lg-7 col-md-12 col-xs-12 field-value"><%= faq.answer %></div>
            
            <div class="col-lg-1 col-md-6 col-xs-6 field-key">
              <%= button_to('Edit', edit_admin_frequently_asked_question_path(faq), method: "get", class: "btn btn-info") %>
            </div>
            <div class="col-lg-1 col-md-6 col-xs-6 field-key">
              <%= button_to('Delete', admin_frequently_asked_question_path(faq), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info") %>
            </div>
          </div>
        <% end %>

        <br><br>

        <div class="row">
          <div class="col-lg-12"></div>
          <div class="col-lg-6">
            <%= button_to("Back", admin_root_path, method: "get", class: "btn btn-info") %>
          </div>
          <div class="col-lg-6">
            <%= button_to('New FAQ', new_admin_frequently_asked_question_path, method: "get", class: "btn btn-info") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
