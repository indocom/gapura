<%= form_with(model: sponsor, local: true, url: target_url) do |form| %>
  <% if sponsor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sponsor.errors.count, "error") %> prohibited this sponsor from being saved:</h2>

      <ul>
      <% sponsor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-fields">
    <div class="row">
      <div class="col-lg-2 col-md-12 field-key">
        <%= form.label :type %>
      </div>
      <div class="col-lg-10 col-md-12 field-value">
        <%= form.text_field :type, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-md-12 field-key">
        <%= form.label :name %>
      </div>
      <div class="col-lg-10 col-md-12 field-value">
        <%= form.text_field :name, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-md-12 field-key">
        <%= form.label :logo %>
      </div>
      <div class="col-lg-10 col-md-12 field-value">
        <%= form.file_field :logo, accept: 'image/png,image/gif,image/jpeg' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form.submit 'Submit', class: "submit-button" %>      
      </div>
    </div>
  </div>
<% end %>
