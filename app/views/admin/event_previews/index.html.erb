<% provide(:custom_css, 'admin/event_previews/index') %>

<section id="admin-preview-index" class="section-container">
  <div class="row">
    <div class="title">
      Event Preview for NUANSA <%= @event.year %>
    </div>
    <div class="content">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-md-6">
            <%= button_to("Back to event", admin_event_path(@event.year), method: "get", class: "btn btn-info") %>
          </div>
          <div class="col-md-6">
            <%= button_to("Upload new image", new_admin_event_event_preview_path(@event.year), 
              method: "get", class: "btn btn-info") %>
          </div>
        </div>

        <br><br>

        <div class="row">
          <% @event_previews.each do |event_preview| %>
            <div class="col-lg-3 col-md-4 col-xs-12">
              <div class="image-box-4-3">
                <div class="image-content">
                  <%= image_tag(event_preview.image_link, width: "100%") %>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="info-fields">
                    <%= event_preview.preview_info %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <%= button_to('Delete', admin_event_event_preview_path(@event.year, event_preview),
                      method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info") %>
                </div>
                <div class="col-6">
                  <%= button_to("Edit", edit_admin_event_event_preview_path(@event.year, event_preview), method: "get", class: "btn btn-info") %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
